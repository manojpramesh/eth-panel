<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" media="screen" href="//netdna.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <!-- Wrap all page content here -->
  <div id="wrap">

    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">
            <%= title %>
          </a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/home">Home</a></li>
            <li><a href="/doc">API</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Logs<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/log/exceptions">Exceptions</a></li>
                <li><a href="/log/stat">Statistics</a></li>
              </ul>
            </li>
            <!--<li><a href="#about">Blockchain</a></li>
            <li><a href="#contact">Account</a></li>
            -->
          </ul>
          <div class="col-sm-4 col-md-4 pull-right" style="margin-top: 8px;">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search by Address / Txhash / Block / Token" name="search">
              <div class="input-group-btn">
                <button class="btn btn-success" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                  </button>
              </div>
            </div>
          </div>
        </div>
        <!--/.nav-collapse -->
      </div>
    </div>

    <!-- Begin page content -->
    <div class="center-container container">

      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 card info-panel">
          Data
        </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 card">
          <div id="stat-container"></div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 panel panel-default card ">
          <div class="panel-heading"> <i class="fa fa-cubes"></i> Recent blocks</div>
          <div class="panel-body scroll-auto" id="style-1">
            <% for(var i=0 ; i < blocks.length; i++) { %>
              <blockquote>
                <strong>Block #:</strong>
                <%= blocks[i].number %>
                  <footer>
                    <div>
                      <strong>Mined by:</strong>
                      <%= blocks[i].miner %>
                    </div>
                    <div>
                      <strong>Transactions: </strong>
                      <%= blocks[i].transactions.length %>
                    </div>
                  </footer>
              </blockquote>
            <% } %>
          </div>
        </div>
      </div>
      
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 panel panel-default card ">
          <div class="panel-heading"><i class="fa fa-list-alt"></i> Recent transactions</div>
          <div class="panel-body scroll-auto" id="style-1">
            <% for(var i=0 ; i < txs.length; i++) { %>
              <blockquote>
                <strong>Block #:</strong>
                <%= txs[i].number %>
                  <footer>
                    <div>
                      <strong>From :</strong>
                      <%= txs[i].from %>
                    </div>
                    <div>
                      <strong>To: </strong>
                      <%= txs[i].to %>
                    </div>
                    <div>
                      <strong>Value: </strong>
                      <%= txs[i].value %>
                    </div>
                  </footer>
              </blockquote>
            <% } %>
          </div>
        </div>
      </div>

    </div>

  </div>

  <div id="footer">
    <div class="container">
      Network id : 
    </div>
  </div>

  <script src="//code.jquery.com/jquery.js"></script>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <script src="https://code.highcharts.com/highcharts.js"></script>
  <script src="https://code.highcharts.com/modules/exporting.js"></script>

  <script>
    Highcharts.chart('stat-container', {
      title: {
        text: 'Number of transactions'
      },
      yAxis: {
        title: {
          text: 'Transactions'
        }
      },
      plotOptions: {
        series: {
          pointStart: 2010
        }
      },
      chart: {
        height: 250
      },
      series: [{
        name: 'Installation',
        data: [69658, 87031, 97031, 69658, 87031, 81993, 97031, 81993]
      }]
    });
  </script>

</body>

</html>